# Contact Game - Environment Variables
# Copy this file to .env and customize as needed

# ======================
# DATABASE CONFIGURATION
# ======================
# MongoDB connection string
# Local: mongodb://localhost:27017/contact
# Production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/contact

# ======================
# SERVER CONFIGURATION
# ======================
# Server port (default: 5001)
PORT=5001

# Node environment (development or production)
# Note: For local testing with built frontend, use 'production'
NODE_ENV=production

# ======================
# SESSION CONFIGURATION
# ======================
# Secret key for session encryption
# For production, generate a secure random string using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-here